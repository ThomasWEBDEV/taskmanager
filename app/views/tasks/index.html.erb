<h1>Task Manager</h1>

<%= form_with url: tasks_path, method: :get, local: true, class: "mb-4" do |form| %>
  <div class="input-group">
    <%= form.text_field :search, placeholder: "Rechercher une t√¢che...",
                        value: params[:search], class: "form-control" %>
    <button class="btn btn-outline-secondary" type="submit">üîç</button>
  </div>
<% end %>

<div class="mb-3">
  <%= link_to "Toutes", tasks_path, class: "btn btn-outline-secondary #{'active' if params[:status].blank?}" %>
  <%= link_to "En cours", tasks_path(status: 'pending'), class: "btn btn-outline-warning #{'active' if params[:status] == 'pending'}" %>
  <%= link_to "Termin√©es", tasks_path(status: 'completed'), class: "btn btn-outline-success #{'active' if params[:status] == 'completed'}" %>
</div>

<% if @tasks.any? %>
  <div class="row mb-3">
    <div class="col">
      <span class="badge bg-success me-2">
        <%= @tasks.where(completed: true).count %> termin√©es
      </span>
      <span class="badge bg-warning">
        <%= @tasks.where(completed: false).count %> en cours
      </span>
    </div>
  </div>

  <% @tasks.each do |task| %>
    <div class="card mb-3">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-start">
          <div>
            <h5 class="card-title">
              <% if task.completed %>
                <span class="badge bg-success me-2">‚úì</span>
              <% else %>
                <span class="badge bg-warning me-2">‚è≥</span>
              <% end %>
              <%= task.title %>
            </h5>
            <p class="card-text"><%= task.description %></p>
            <small class="text-muted">
              Projet : <%= link_to task.project.title, task.project %>
            </small>
          </div>
          <div>
            <%= link_to "Voir", task, class: "btn btn-outline-primary btn-sm" %>
            <% unless task.completed %>
              <%= link_to "Terminer", task, method: :patch, class: "btn btn-outline-success btn-sm" %>
            <% end %>
            <%= link_to "Supprimer", task, method: :delete,
                        confirm: "√ätes-vous s√ªr ?",
                        class: "btn btn-outline-danger btn-sm" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  <div class="alert alert-info">
    <h4>Aucune t√¢che</h4>
    <p>Vous n'avez encore aucune t√¢che assign√©e.</p>
    <%= link_to "Voir mes projets", projects_path, class: "btn btn-primary" %>
  </div>
<% end %>
