<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>
    <% if @task.completed %>
      <span class="badge bg-success me-2">✓ Terminé</span>
    <% else %>
      <span class="badge bg-warning me-2">⏳ En cours</span>
    <% end %>
    <%= @task.title %>
  </h1>
  <div>
    <% unless @task.completed %>
      <%= button_to "Marquer terminé", @task,
              method: :patch,
              class: "btn btn-success" %>
    <% end %>
    <%= button_to "Supprimer", @task,
              method: :delete,
              confirm: "Êtes-vous sûr ?",
              class: "btn btn-outline-danger btn-sm" %>
  </div>
</div>

<div class="card">
  <div class="card-body">
    <h5 class="card-title">Description :</h5>
    <p class="card-text"><%= @task.description %></p>

    <% if @task.notes.present? %>
      <div class="glass-card p-3 mt-3" style="background: rgba(255, 220, 120, 0.1); border-left: 4px solid #ffecd2;">
        <h6 class="mb-2">
          <i class="fas fa-sticky-note me-2" style="color: #ffecd2;"></i>
          Mes notes
        </h6>
        <p class="mb-0 text-muted"><%= simple_format(@task.notes) %></p>
      </div>
    <% end %>

    <hr>

    <div class="row">
      <div class="col-md-6">
        <strong>Projet :</strong>
        <%= link_to @task.project.title, @task.project %>
      </div>
      <div class="col-md-6">
        <strong>Assigné à :</strong> <%= @task.user.email %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-6">
        <strong>Créé le :</strong> <%= @task.created_at.strftime("%d/%m/%Y") %>
      </div>
      <div class="col-md-6">
        <strong>Statut :</strong>
        <% if @task.completed %>
          <span class="text-success">Terminé</span>
        <% else %>
          <span class="text-warning">En cours</span>
        <% end %>
      </div>
    </div>

    <% if @task.due_date %>
      <div class="row mt-2">
        <div class="col-md-6">
          <strong>Date limite :</strong> <%= @task.due_date.strftime("%d/%m/%Y") %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="mt-4">
  <%= link_to "← Retour au projet", @task.project, class: "btn btn-secondary" %>
  <%= link_to "Toutes mes tâches", tasks_path, class: "btn btn-outline-secondary" %>
</div>
