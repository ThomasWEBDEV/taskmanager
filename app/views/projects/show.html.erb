<div class="fade-in-up">
  <!-- Breadcrumb moderne -->
  <nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%= link_to projects_path, class: "text-decoration-none" do %>
          <i class="fas fa-home me-1"></i>
          Mes Projets
        <% end %>
      </li>
      <li class="breadcrumb-item active" aria-current="page"><%= @project.title %></li>
    </ol>
  </nav>

  <!-- Header du projet -->
  <div class="glass-card p-4 mb-5">
    <div class="row align-items-center">
      <div class="col-lg-8">
        <h1 class="mb-3">
          <i class="fas fa-folder-open me-3"></i>
          <%= @project.title %>
        </h1>

        <p class="text-muted mb-3 fs-5">
          <%= @project.description %>
        </p>

        <!-- Barre de progression globale -->
        <% progress = @project.completion_percentage %>

        <div class="d-flex align-items-center">
          <div class="progress-modern flex-grow-1 me-3" style="height: 12px;">
            <div class="progress-bar" style="width: <%= progress %>%"></div>
          </div>
          <span class="badge badge-modern bg-info"><%= progress %>% terminé</span>
        </div>
      </div>

      <div class="col-lg-4 text-lg-end mt-3 mt-lg-0">
        <div class="d-flex flex-column gap-2">
          <%= link_to edit_project_path(@project), class: "btn btn-outline-secondary btn-modern" do %>
            <i class="fas fa-edit me-2"></i>Modifier
          <% end %>

          <% if @project.pending_tasks_count > 0 %>
            <%= button_to complete_all_tasks_project_path(@project),
                method: :patch,
                data: { confirm: "Marquer toutes les tâches non terminées comme terminées ?" },
                class: "btn btn-success btn-modern" do %>
              <i class="fas fa-check-double me-2"></i>Terminer tout (<%= @project.pending_tasks_count %>)
            <% end %>
          <% end %>
          
          <%= button_to @project,
              method: :delete,
              data: { confirm: "Supprimer ce projet et toutes ses tâches ?" },
              class: "btn btn-outline-danger btn-modern" do %>
            <i class="fas fa-trash me-2"></i>Supprimer
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Statistiques du projet -->
  <div class="row g-3 mb-5">
    <div class="col-md-3 col-sm-6">
      <div class="stats-card">
        <i class="fas fa-tasks icon" style="color: #667eea;"></i>
        <h4><%= @tasks.count %></h4>
        <div class="label">Total</div>
      </div>
    </div>
    <div class="col-md-3 col-sm-6">
      <div class="stats-card">
        <i class="fas fa-check-circle icon" style="color: #84fab0;"></i>
        <h4><%= @project.completed_tasks_count %></h4>
        <div class="label">Terminées</div>
      </div>
    </div>
    <div class="col-md-3 col-sm-6">
      <div class="stats-card">
        <i class="fas fa-clock icon" style="color: #ffecd2;"></i>
        <h4><%= @project.pending_tasks_count %></h4>
        <div class="label">En cours</div>
      </div>
    </div>
    <div class="col-md-3 col-sm-6">
      <div class="stats-card">
        <i class="fas fa-fire icon" style="color: #ff9a9e;"></i>
        <h4><%= @project.urgent_tasks_count %></h4>
        <div class="label">Urgentes</div>
      </div>
    </div>
  </div>

  <!-- Header des tâches avec mode drag & drop -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0">
      <i class="fas fa-list-check me-2"></i>
      Tâches du projet
      <small class="text-muted ms-2">
        <i class="fas fa-grip-vertical"></i> Glissez pour réorganiser
      </small>
    </h3>
    <%= link_to new_project_task_path(@project), class: "btn btn-success btn-modern" do %>
      <i class="fas fa-plus me-2"></i>Nouvelle Tâche
    <% end %>
  </div>

  <!-- Liste des tâches avec drag & drop -->
  <% if @tasks.any? %>
    <div class="tasks-container" 
         data-controller="sortable"
         data-sortable-url-value="/tasks/:id/reorder">
      <% @tasks.each_with_index do |task, index| %>
        <div class="task-draggable fade-in-up" 
             style="animation-delay: <%= index * 0.05 %>s;"
             data-task-id="<%= task.id %>"
             data-project-id="<%= @project.id %>">
          <div class="glass-card task-card mb-3 <%= 'completed' if task.completed %> <%= task.priority if task.priority.present? %>">
            <div class="card-body p-4">
              <div class="row align-items-center">
                <!-- Handle de drag -->
                <div class="col-auto d-none d-md-block">
                  <span class="drag-handle">
                    <i class="fas fa-grip-vertical fa-lg"></i>
                  </span>
                </div>

                <!-- Contenu de la tâche -->
                <div class="col">
                  <div class="d-flex align-items-start mb-2">
                    <div class="flex-grow-1">
                      <!-- Badges de statut et priorité -->
                      <div class="mb-2">
                        <% if task.created_at > 1.day.ago %>
                          <span class="badge badge-modern bg-info me-1">
                            <i class="fas fa-star me-1"></i>Nouveau
                          </span>
                        <% end %>

                        <%= content_tag :span, 
                            task.priority_label, 
                            class: "badge badge-modern bg-#{task.priority == 'urgent' ? 'danger' : task.priority == 'high' ? 'warning' : 'secondary'} me-1" if task.priority.present? %>

                        <% if task.completed %>
                          <span class="badge badge-modern bg-success me-1">
                            <i class="fas fa-check me-1"></i>Terminé
                          </span>
                        <% elsif task.overdue? %>
                          <span class="badge badge-modern bg-danger me-1">
                            <i class="fas fa-exclamation-triangle me-1"></i>En retard
                          </span>
                        <% elsif task.due_today? %>
                          <span class="badge badge-modern bg-warning me-1">
                            <i class="fas fa-calendar-day me-1"></i>Aujourd'hui
                          </span>
                        <% else %>
                          <span class="badge badge-modern bg-warning me-1">
                            <i class="fas fa-clock me-1"></i>En cours
                          </span>
                        <% end %>
                      </div>

                      <!-- Titre de la tâche -->
                      <h5 class="mb-2 <%= 'text-decoration-line-through text-muted' if task.completed %>">
                        <%= task.title %>
                      </h5>

                      <!-- Description -->
                      <p class="text-muted mb-2">
                        <%= truncate(task.description, length: 100) %>
                      </p>

                      <% if task.notes.present? %>
                        <small class="text-warning d-block mb-2">
                          <i class="fas fa-sticky-note me-1"></i>
                          Notes personnelles ajoutées
                        </small>
                      <% end %>

                      <!-- Métadonnées -->
                      <div class="d-flex gap-3 text-muted small">
                        <span>
                          <i class="fas fa-user me-1"></i>
                          <%= task.user.display_name %>
                        </span>
                        <% if task.due_date %>
                          <span class="<%= 'text-danger' if task.overdue? %>">
                            <i class="fas fa-calendar me-1"></i>
                            <%= task.due_date.strftime("%d/%m/%Y") %>
                          </span>
                        <% end %>
                        <span>
                          <i class="fas fa-plus me-1"></i>
                          <%= time_ago_in_words(task.created_at) %>
                        </span>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Actions -->
                <div class="col-auto">
                  <div class="d-flex gap-2 flex-wrap">
                    <%= link_to task, class: "btn btn-outline-primary btn-sm" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>

                    <% unless task.completed %>
                      <%= button_to toggle_complete_task_path(task),
                          method: :patch,
                          class: "btn btn-success btn-sm" do %>
                        <i class="fas fa-check"></i>
                      <% end %>
                    <% end %>

                    <%= button_to task,
                        method: :delete,
                        data: { confirm: "Supprimer cette tâche ?" },
                        class: "btn btn-outline-danger btn-sm" do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- État vide -->
    <div class="text-center section-spacing">
      <div class="glass-card p-5 mx-auto" style="max-width: 400px;">
        <i class="fas fa-tasks fa-3x mb-3" style="color: #667eea; opacity: 0.6;"></i>
        <h4 class="mb-3">Aucune tâche</h4>
        <p class="text-muted mb-4">
          Ce projet n'a pas encore de tâches. Commencez par en créer une !
        </p>
        <%= link_to new_project_task_path(@project), class: "btn btn-success btn-modern" do %>
          <i class="fas fa-plus me-2"></i>Première tâche
        <% end %>
      </div>
    </div>
  <% end %>
</div>
